<%layout('layouts/boilerplate')%>

<div class="container text-center">
    <h1 class="mb-3"><%=player.name.toUpperCase()%> </h2>
    <div class="row ">
        <div class="col-2"></div>
        <div class="col-4">
            <div class="card mt-2" style="width: 18rem;">
                <img src="<%=player.image%> " alt="" class="card-img-top img-thumbnail">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= player.name %>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= player.age %> years
                    </h6>
                    <p><%=player.role%> </p>
                </div>
            </div>
        </div>
        <div class="col-4 mt-5">
            <h3>Player Stats</h3>
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Match Played</th>
                        <td><%=player.matchPlayed%> </td>
                    </tr>
                    <tr>
                        <th>Runs Scored</th>
                        <td><%=player.runs%> </td>
                    </tr>
                    <tr>
                        <th>Average</th>
                        <td><%=player.average%> </td>
                    </tr>
                    <tr>
                        <th>Wickets</th>
                        <td><%=player.wickets%> </td>
                    </tr>
                    <tr>
                        <th>Catches</th>
                        <td><%=player.catches%> </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-2"></div>
    </div>
</div>