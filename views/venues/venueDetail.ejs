<% layout('layouts/boilerplate') %>


<div class="container mb-5">
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="mb-5 text-center">Venue detail</h1>
            <div class="card">
                <img src="<%=venue.image%> " alt="" class="img-fluid">
                <div class="card-body">
                    <div class="card-title">
                        <h2 class="text-center"><%=venue.name%> </h2>
                    </div>
                    <div class="text-center mt-3">
                        <h6 class="card-text mx-5 text-muted text-end d-inline-block">
                            <%=venue.country%>
                        </h6>
                        <h6 class="card-text mx-5 text-muted text-start d-inline-block">
                            Capacity - <%=venue.capacity%>
                        </h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>