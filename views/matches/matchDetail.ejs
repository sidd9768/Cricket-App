<%layout('layouts/boilerplate')%>

<div class="container">
    <div class="row">
        <h2 class="display-5 text-center"><%=match.teamOne%> vs <%=match.teamTwo%>  </h2>
        <hr>

        <div class="col-3 bg-dark text-light text-center">
            <a href="/venues/<%=match.venue._id%> " style="color: inherit; text-decoration: none;">
                <h3 class="mt-3">Venue - <%=match.venue.name%> </h3>
            </a>    
            <h1 class="mt-5"><i class="fas fa-volleyball-ball"></i></h1>
            <h5 class="mt-5">Match - <%=match.matchNumber%> </h5>
        </div>

        <div class="col-6 text-center mt-3">
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Team Won</th>
                        <td>
                            <a href="/teams/<%=teamWon[0]._id%> " style="color: inherit; text-decoration: none;">
                                <img src="<%=teamWon[0].image%> " alt="" class="img-fluid mx-2" style="width: 1.5rem; height: 1.5rem;"><%=teamWon[0].name%> 
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Team Lose</th>
                        <td>
                            <a href="/teams/<%=teamLose[0]._id%> " style="color: inherit; text-decoration: none;">
                                <img src="<%=teamLose[0].image%> " alt="" class="img-fluid mx-2" style="width: 1.5rem; height: 1.5rem;"><%=teamLose[0].name%> 
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Player of the Match</th>
                        <td>
                            <a href="/teams/<%=teamWon[0]._id%>/<%=manOfTheMatch[0]._id%>" style="color: inherit; text-decoration: none;">
                                <img src="<%=manOfTheMatch[0].image%> " alt="" class="img-fluid mx-2" style="width: 3rem; height: 3rem;"><%=manOfTheMatch[0].name%> 
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Bowler of the Match</th>
                        <td>
                            <a href="/teams/<%=teamWon[0]._id%>/<%=bowlerOfTheMatch[0]._id%>" style="color: inherit; text-decoration: none;">
                                <img src="<%=bowlerOfTheMatch[0].image%> " alt="" class="img-fluid mx-2" style="width: 3rem; height: 3rem;"><%=bowlerOfTheMatch[0].name%> 
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th>Fielder of the Match</th>
                        <td>
                            <a href="/teams/<%=teamWon[0]._id%>/<%=fielderOfTheMatch[0]._id%>" style="color: inherit; text-decoration: none;">
                                <img src="<%=fielderOfTheMatch[0].image%> " alt="" class="img-fluid mx-2" style="width: 3rem; height: 3rem;"><%=fielderOfTheMatch[0].name%> 
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-3 bg-dark text-light mt-3 text-center">
            <img src="<%=match.venue.image%>" alt="" class="img-fluid mt-3 rounded">
            <div class="text-muted">
                <p class="mt-3">
                    <i class="fas fa-user-friends mx-1"></i>
                    <span class="mx-1"><%=match.venue.capacity%></span>
                </p>
                <p>
                    <i class="fas fa-location-arrow mx-1"></i>
                    <span class="mx-1"><%=match.venue.country%></span>
                </p>
            </div>
        </div>
    </div>
</div>

